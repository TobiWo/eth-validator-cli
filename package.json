{
  "name": "eth-validator-cli",
  "version": "0.1.0",
  "description": "CLI tool to manage Ethereum validators",
  "license": "MIT",
  "author": {
    "name": "TobiWo"
  },
  "bin": {
    "eth-validator-cli": "dist/cli/main.js"
  },
  "scripts": {
    "build": "tsc --build",
    "dev-start": "node -r ts-node/register ./src/cli/main.ts",
    "package": "node scripts/package.js",
    "start": "npm run build && node dist/cli/main.js"
  },
  "dependencies": {
    "@chainsafe/blst": "^2.2.0",
    "@ledgerhq/hw-app-eth": "^6.42.6",
    "@ledgerhq/hw-transport-node-hid": "^6.29.5",
    "@ledgerhq/types-cryptoassets": "^7.19.0",
    "@ledgerhq/types-devices": "^6.25.3",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "ethers": "^6.13.4",
    "mathjs": "^14.0.1",
    "node-hid": "^3.1.2",
    "prompts": "^2.4.2",
    "undici": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.16.0",
    "@eslint/migrate-config": "^1.3.5",
    "@types/node": "^22.9.3",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@yao-pkg/pkg": "^6.1.1",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tsdoc": "^0.4.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "sort-package-json": "^2.12.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "overrides": {
    "axios": "0.29.0"
  },
  "pkg": {
    "assets": [
      "node_modules/@chainsafe/blst-*/**/*",
      "node_modules/node-hid/prebuilds/**/*",
      "node_modules/@ledgerhq/hw-transport-node-hid/node_modules/usb/prebuilds/**/*",
      "node_modules/@ledgerhq/cryptoassets-evm-signatures/lib/data/**/*",
      "node_modules/@ledgerhq/evm-tools/lib/selectors/**/*",
      "node_modules/@ledgerhq/evm-tools/lib/message/**/*",
      "node_modules/@ledgerhq/devices/lib/**/*"
    ]
  }
}
